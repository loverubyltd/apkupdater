# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

# Maintain legacy style
[*.kt]
indent_style = tab

# Maintain legacy style
[*.xml]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[{COMMIT,TAG}_EDITMSG]
max_line_length = 72

[*.{cmd,bat}]
end_of_line = crlf
